<p id="notice"><%= notice %></p>


<h1><%= @event.name %></h1>
<h6>Le <%= @event.date %></h6>

<p id="event_description">
  <%= @event.description.gsub(/\n/, "<br/>").html_safe %>
</p>

<p>
  <a href="<%= url_for new_event_project_path(@event) %>"><img src="/images/projets.png" class="signup_im"/></a><a href="<%= url_for new_event_participation_path(@event) %>"><img src="/images/competences.png" class="signup_im"/></a>
</p>

<h2>Liste des projets inscrits:</h2>
<% @event.projects.each do |p| %>
  <hr/>
  <div>
    <h3><%= p.name %></h3>
    <p>
      <%= p.description.gsub(/\n/,"<br/>").html_safe %>
    </p>
    <%= link_to "Voir plus", event_project_path(@event, p) %>
  </div>
<% end %>